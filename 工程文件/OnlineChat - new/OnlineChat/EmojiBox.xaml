<UserControl xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
             x:Class="OnlineChat.EmojiBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineChat"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="310">
    <UserControl.Resources>
        <Style x:Key="emojistyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#B22F2F2F" Margin="2" Loaded="Grid_Loaded">
        <WrapPanel x:Name="emojipanel" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" Orientation="Horizontal" ForceCursor="True" Margin="2">
            
        </WrapPanel>


    </Grid>
</UserControl>
