<UserControl x:Class="OnlineChat.FileProgress"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineChat"
             mc:Ignorable="d" Background="#007A7A7A" MinWidth="100">
    <Grid Background="#00000000" MinWidth="160">
        <Label x:Name="label" Margin="55,0,5,15" VerticalContentAlignment="Center" 
               Foreground="#FF5D5757" VerticalAlignment="Bottom" MinHeight="30" MaxWidth="250" Padding="5" FontSize="16" MinWidth="100">
            <TextBlock x:Name="textblock" TextWrapping="Wrap"/>
        </Label>
        <ProgressBar x:Name="progressbar" Margin="55,0,5,5" MinWidth="100" MaxWidth="250" Padding="5" Height="5" VerticalAlignment="Bottom" />
        <Image x:Name="image" Margin="0,0,0,0" Source="Resources/img/logo.png" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>

    </Grid>
</UserControl>
