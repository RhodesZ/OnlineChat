<UserControl xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
             x:Class="OnlineChat.Emoji"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineChat"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid x:Name="grid" Height="30" Width="30">
        <Border  x:Name="border" CornerRadius="5" Height="26" Width="26" Background="#7FFFFFFF" Focusable="True" Margin="2" Cursor="Hand" HorizontalAlignment="Left">
            <Border.Effect>
                <DropShadowEffect Color="Gray"  BlurRadius="16"  ShadowDepth="3" Opacity="1" Direction="0" />
            </Border.Effect>
            <Image x:Name="EMOJI" Stretch="UniformToFill" Cursor="Hand" Margin="5" MouseLeftButtonDown="EMOJI_MouseLeftButtonDown"/>
        </Border>
        <!--<Image x:Name="EMOJI" Stretch="UniformToFill" Cursor="Hand" Margin="5" Source="Resources/logo.png"/>-->
    </Grid>
</UserControl>
